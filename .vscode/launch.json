    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run unit test current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/dleng",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/dleng",
                "UTEST_MODE": "1"
            }
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/dleng",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/dleng"
            }
        },
        {
            "name": "Python Debugger: Build",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/dleng/build.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/dleng",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/dleng"
            }
        }
    ]
}